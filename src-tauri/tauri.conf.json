{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "clarc",
  "version": "1.0.0",
  "identifier": "com.j2ww.clarc",
  "build": {
    "frontendDist": "loading",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "",
    "beforeDevCommand": "bun run dev"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "clarc",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:*; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/clarc-core"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
